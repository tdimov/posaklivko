extends ../includes/layout.jade

block title
  title Contact

block content
  div.page-header
    h1 Contact
  div.panel.panel-default
    div.panel-body
      if name
        div.alert.alert-success
          span Thank you, #{name}
      div.col-md-6
        form(action="/contact" method="POST" enctype="multipart/form-data")
          div.form-group
            label(for="name") Name
            input#name.form-control(type="text" name="name" placeholder="Your name")
          div.form-group
            label(for="email") Email
            input#email.form-control(type="email" name="email" placeholder="Your email")
          div.form-group
            label(for="files") Files
            input#files.form-control(type="file" name="files" placeholder="Your file" multiple)
          div.form-group
            label(for="message") Message
            textarea#message.form-control(name="message")
          button.btn.btn-success(type="submit") Submit
